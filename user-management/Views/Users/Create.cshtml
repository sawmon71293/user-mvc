@using Microsoft.EntityFrameworkCore
@model user_management.ViewModels.UserCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewUser.Username" class="control-label"></label>
                <input asp-for="NewUser.Username" class="form-control" />
                <span asp-validation-for="NewUser.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Email" class="control-label"></label>
                <input asp-for="NewUser.Email" class="form-control" />
                <span asp-validation-for="NewUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.ContactNo" class="control-label"></label>
                <input asp-for="NewUser.ContactNo" class="form-control" />
                <span asp-validation-for="NewUser.ContactNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.NRCNo" class="control-label"></label>
                <input asp-for="NewUser.NRCNo" class="form-control" />
                <span asp-validation-for="NewUser.NRCNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewUser.Password" class="control-label"></label>
                <input asp-for="NewUser.Password" class="form-control" />
                <span asp-validation-for="NewUser.Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.NewUser.Username)</th>
            <th>@Html.DisplayNameFor(model => model.NewUser.Email)</th>
            <th>@Html.DisplayNameFor(model => model.NewUser.ContactNo)</th>
            <th>@Html.DisplayNameFor(model => model.NewUser.NRCNo)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users) {
        <tr>
            <td>@Html.DisplayFor(_ => item.Username)</td>
            <td>@Html.DisplayFor(_ => item.Email)</td>
            <td>@Html.DisplayFor(_ => item.ContactNo)</td>
            <td>@Html.DisplayFor(_ => item.NRCNo)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
