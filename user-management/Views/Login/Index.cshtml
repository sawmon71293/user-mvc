@model LoginViewModel

<h2>Login</h2>

<form asp-action="Index" method="post" class="col-12 col-sm-8 col-md-6 col-lg-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success mt-2">@TempData["Message"]</div>
    }
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div  class="d-flex flex-row form-group">
        <div class="d-flex align-items-center">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
        <div class="ms-2 d-flex flex-column align-items-center">
            <p class="mb-0"><a asp-action="Index" asp-controller="ForgotPassword">Forgot Password?</a></p>
            <p class="mb-0">New User?<a asp-action="Index" asp-controller="Register" class="ms-2">Sign Up</a></p>
        </div>
        
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}